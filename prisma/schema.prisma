generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Folder {
  id              String   @id @default(cuid())
  name            String
  description     String?
  tags            String[]
  productCategory String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  media           Media[]
}

model Media {
  id                String   @id @default(cuid())
  folderId          String
  fileName          String
  fileType          String
  fileFormat        String
  fileSize          Int
  storagePath       String
  cdnUrl            String
  thumbnailUrl      String?
  tags              String[]
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  metadata          Json?
  isCustomThumbnail Boolean  @default(false)
  folder            Folder   @relation(fields: [folderId], references: [id])
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("user")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

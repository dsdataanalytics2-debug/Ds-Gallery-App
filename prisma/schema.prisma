generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Folder {
  id              String   @id @default(cuid())
  name            String
  description     String?
  tags            String[]
  productCategory String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  media           Media[]
}

model Media {
  id           String   @id @default(cuid())
  folderId     String
  folder       Folder   @relation(fields: [folderId], references: [id])
  fileName     String
  fileType     String   // "image" or "video"
  fileFormat   String
  fileSize     Int
  storagePath  String
  cdnUrl       String
  thumbnailUrl String?
  tags         String[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  metadata     Json?    // For width, height, duration
}

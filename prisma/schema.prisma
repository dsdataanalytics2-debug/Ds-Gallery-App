generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Folder {
  id              String             @id @default(cuid())
  name            String
  description     String?
  tags            String[]
  productCategory String?
  createdAt       DateTime           @default(now())
  updatedAt       DateTime           @updatedAt
  media           Media[]
  parentId        String?
  parent          Folder?            @relation("FolderHierarchy", fields: [parentId], references: [id])
  children        Folder[]           @relation("FolderHierarchy")
  ownerId         String?
  owner           User?              @relation("UserFolders", fields: [ownerId], references: [id])
  permissions     FolderPermission[]
}

model Media {
  id                String   @id @default(cuid())
  folderId          String
  fileName          String
  fileType          String
  fileFormat        String
  fileSize          Int
  storagePath       String
  storageType       String   @default("local") // "local" | "google-drive"
  publicId          String?
  cdnUrl            String
  thumbnailUrl      String?
  tags              String[]
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  metadata          Json?
  isCustomThumbnail Boolean  @default(false)
  folder            Folder   @relation(fields: [folderId], references: [id])
}

model User {
  id          String             @id @default(cuid())
  email       String             @unique
  password    String
  name        String?
  role        String             @default("user")
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt
  logs        AuditLog[]
  ownedFolders Folder[]           @relation("UserFolders")
  permissions FolderPermission[]
}

model AuditLog {
  id         String   @id @default(cuid())
  userId     String
  userName   String?
  action     String // "UPLOAD", "DELETE", "DOWNLOAD"
  mediaId    String?
  mediaName  String?
  fileType   String?
  folderId   String?
  folderName String?
  timestamp  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id])
}

model GoogleOAuthToken {
  id           String   @id @default(cuid())
  accessToken  String   @db.Text
  refreshToken String   @db.Text
  expiresAt    DateTime
  scope        String?
  tokenType    String   @default("Bearer")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model FolderPermission {
  id        String   @id @default(cuid())
  userId    String
  folderId  String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  folder    Folder   @relation(fields: [folderId], references: [id], onDelete: Cascade)

  @@unique([userId, folderId])
}
